<%= content_for :title, "Products" %>
<div class="bg-gradient-to-b from-gray-50 to-white min-h-screen">
  <!-- Hero Banner -->
  <div class="relative overflow-hidden bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-400">
    <div class="absolute inset-0">
      <svg class="absolute inset-0 h-full w-full" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1512 506">
        <path fill="url(#0787a7c5-3e6e-4a8a-a661-0c5c204091a2)" d="M0 0h1512v506H0z" />
        <defs>
          <pattern id="0787a7c5-3e6e-4a8a-a661-0c5c204091a2" width="96" height="96" x="50%" patternUnits="userSpaceOnUse">
            <path d="M128 0c17.7 0 32 14.3 32 32v32c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32V32C0 14.3 14.3 0 32 0h96zM0 128c0-17.7 14.3-32 32-32h32c17.7 0 32 14.3 32 32v32c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32v-32zM64 64a32 32 0 10-64 0 32 32 0 1064 0zM128 224c0-17.7 14.3-32 32-32h32c17.7 0 32 14.3 32 32v32c0 17.7-14.3 32-32 32h-32c-17.7 0-32-14.3-32-32v-32z" fill="currentColor" fill-opacity="0.05" />
          </pattern>
        </defs>
      </svg>
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/90 via-purple-500/90 to-pink-400/90"></div>
    </div>
    <div class="relative mx-auto max-w-7xl px-6 py-24 lg:px-8">
      <h1 class="text-4xl font-bold tracking-tight text-white md:text-5xl lg:text-6xl mb-4 animate-fade-in">
        Curated Products <span class="text-cyan-200">You'll Love</span>
      </h1>
      <p class="max-w-2xl text-xl text-indigo-100 animate-fade-in delay-150">
        Each product carefully selected to maximize your commission rates while delivering exceptional value to your audience.
      </p>
      <div class="mt-10 flex gap-x-6 animate-fade-in delay-300">
        <% if false # Category navigation toggle - for mobile %>
          <button id="category-toggle" class="block md:hidden rounded-lg bg-white/10 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-white/20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white">
            Browse Categories <span aria-hidden="true">→</span>
          </button>
        <% end %>
        <a href="#product-grid" class="rounded-lg bg-white px-3.5 py-2.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white">
          Explore Products <span aria-hidden="true">↓</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
    <!-- Top Filter Bar -->
    <div class="sticky top-16 z-10 mb-8 bg-white/80 backdrop-blur-sm p-4 rounded-lg shadow-md border border-gray-100">
      <div class="flex flex-col md:flex-row md:items-center justify-between space-y-4 md:space-y-0">
        <!-- Left side: Results count and filters -->
        <div class="flex flex-col md:flex-row md:items-center gap-4">
          <!-- Results count -->
          <div class="text-sm font-medium text-gray-500">
            Showing <span class="font-bold text-gray-900"><%= @products.total_count || 0 %></span> products
          </div>
          
          <!-- Filter dropdowns -->
          <div class="flex flex-wrap gap-3" data-controller="dropdown">
            <!-- Category filter -->
            <div class="relative inline-block">
              <button type="button" 
                      class="inline-flex items-center gap-x-1 rounded-md bg-white px-3 py-2 text-sm font-medium text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                      data-action="click->dropdown#toggle"
                      aria-expanded="false">
                Category
                <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                </svg>
              </button>
              <div class="absolute left-0 z-10 mt-2 w-48 origin-top-left rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
                   data-dropdown-target="menu"
                   role="menu" 
                   aria-orientation="vertical" 
                   tabindex="-1">
                <div class="py-1">
                  <a href="#" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">All Categories</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Electronics</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Home & Kitchen</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Beauty & Personal Care</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Fashion</a>
                </div>
              </div>
            </div>

            <!-- Sort dropdown -->
            <div class="relative inline-block" data-controller="dropdown">
              <button type="button" 
                      class="inline-flex items-center gap-x-1 rounded-md bg-white px-3 py-2 text-sm font-medium text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                      data-action="click->dropdown#toggle"
                      aria-expanded="false">
                Sort by
                <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                </svg>
              </button>
              <div class="absolute left-0 z-10 mt-2 w-48 origin-top-left rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
                   data-dropdown-target="menu"
                   role="menu" 
                   aria-orientation="vertical" 
                   tabindex="-1">
                <div class="py-1">
                  <a href="#" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Newest First</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Price: High to Low</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Price: Low to High</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Most Popular</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Highest Commission</a>
                </div>
              </div>
            </div>
            
            <!-- Product type filter -->
            <div class="relative inline-block" data-controller="dropdown">
              <button type="button" 
                      class="inline-flex items-center gap-x-1 rounded-md bg-white px-3 py-2 text-sm font-medium text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                      data-action="click->dropdown#toggle"
                      aria-expanded="false">
                Product Type
                <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                </svg>
              </button>
              <div class="absolute left-0 z-10 mt-2 w-48 origin-top-left rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
                   data-dropdown-target="menu"
                   role="menu" 
                   aria-orientation="vertical" 
                   tabindex="-1">
                <div class="py-1">
                  <a href="#" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">All Products</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Affiliate Products</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Dropship Products</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Right side: Grid/List toggle & Search -->
        <div class="flex items-center gap-3">
          <!-- View toggle -->
          <div class="flex rounded-lg shadow-sm ring-1 ring-inset ring-gray-300">
            <button type="button" class="py-2 px-3 inline-flex items-center gap-x-1.5 rounded-l-md bg-indigo-600 text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
              </svg>
              <span class="sr-only sm:not-sr-only sm:ml-2 text-sm">Grid</span>
            </button>
            <button type="button" class="py-2 px-3 inline-flex items-center gap-x-1.5 rounded-r-md bg-white text-gray-400 hover:text-gray-500 shadow-sm focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zM3.75 12h.007v.008H3.75V12zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm-.375 5.25h.007v.008H3.75v-.008zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
              </svg>
              <span class="sr-only sm:not-sr-only sm:ml-2 text-sm">List</span>
            </button>
          </div>
          
          <!-- Search -->
          <div class="relative flex-grow max-w-xs">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
              </svg>
            </div>
            <input type="text" name="search" id="search" class="block w-full rounded-md border-0 py-1.5 pl-10 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Search products">
          </div>
        </div>
      </div>
    </div>

    <!-- Product Grid -->
    <div id="product-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @products.each do |product| %>
        <div class="group relative bg-white rounded-2xl shadow-md border-b-4 border-transparent hover:border-indigo-500 shadow-gray-200/50 hover:shadow-lg hover:shadow-indigo-100/50 overflow-hidden transition-all duration-300 transform hover:-translate-y-1 motion-reduce:transition-none motion-reduce:hover:transform-none"
             data-controller="product-card">
          
          <!-- Product Image -->
          <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden bg-gray-100 transition-opacity group-hover:opacity-90">
            <img src="<%= product.image.attached? ? url_for(product.image) : asset_path('product-placeholder.jpg') %>" 
                 alt="<%= product.name %>" 
                 class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
                 onerror="this.onerror=null; this.src='/api/placeholder/400/400'; this.alt='<%= product.name %>';">
                
            <!-- Product Bookmark/Wishlist -->
            <button type="button" 
                    class="absolute top-3 right-3 rounded-full bg-white p-1.5 text-gray-400 shadow-sm hover:text-rose-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                    data-action="product-card#toggleWishlist">
              <span class="sr-only">Add to wishlist</span>
              <svg class="h-5 w-5 wishlist-icon" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
              </svg>
            </button>

            <!-- Product Badges -->
            <div class="absolute left-3 top-3 flex flex-col gap-y-1.5">
              <% if Time.now - product.created_at < 7.days %>
                <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                  New
                </span>
              <% end %>
              
              <% if product.is_a?(Product::AffiliateItem) && product.commission_rate&.to_f >= 0.15 %>
                <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                  <svg class="mr-1.5 h-2.5 w-2.5 fill-green-500" viewBox="0 0 6 6" aria-hidden="true">
                    <circle cx="3" cy="3" r="3" />
                  </svg>
                  High Commission
                </span>
              <% elsif product.is_a?(Product::DropshipItem) && product.profit_margin&.to_f && product.profit_margin.to_f > 20 %>
                <span class="inline-flex items-center rounded-full bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-700/10">
                  <svg class="mr-1.5 h-2.5 w-2.5 fill-purple-500" viewBox="0 0 6 6" aria-hidden="true">
                    <circle cx="3" cy="3" r="3" />
                  </svg>
                  High Margin
                </span>
              <% end %>
              
              <% if rand > 0.6 # This is a placeholder for actual inventory logic for dropship items %>
                <span class="inline-flex items-center rounded-full bg-amber-50 px-2 py-1 text-xs font-medium text-amber-800 ring-1 ring-inset ring-amber-600/10">
                  <svg class="mr-1.5 h-2.5 w-2.5 fill-amber-500" viewBox="0 0 6 6" aria-hidden="true">
                    <circle cx="3" cy="3" r="3" />
                  </svg>
                  Low Stock
                </span>
              <% end %>
            </div>
          </div>
          
          <!-- Product Info -->
          <div class="p-6">
            <!-- Category -->
            <div class="mb-2 text-xs text-gray-500">
              <%= product.categories.first&.name || ['Electronics', 'Home & Kitchen', 'Fashion', 'Beauty & Personal Care'].sample %>
            </div>
            
            <!-- Product Name -->
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors duration-200">
              <%= link_to product.name, product_path(product.slug), class: "before:absolute before:inset-0" %>
            </h3>
            
            <!-- Product Description -->
            <p class="mt-2 text-sm text-gray-600 line-clamp-2 min-h-[40px]">
              <%= product.description %>
            </p>
            
            <!-- Price & Rating -->
            <div class="mt-4 flex items-center justify-between">
              <div>
                <% if rand > 0.3 # Placeholder for actual discount logic %>
                  <span class="text-sm text-gray-500 line-through">$<%= (product.price.to_f * 1.2).round(2) %></span>
                <% end %>
                <span class="ml-1 text-lg font-medium text-gray-900">$<%= product.price %></span>
              </div>
              
              <div class="flex items-center">
                <svg class="text-amber-400 h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="ml-1 text-sm text-gray-600"><%= (rand(3.5..5.0) * 10).round / 10.0 %></span>
              </div>
            </div>
            
            <!-- Action Area (CTAs) -->
            <div class="mt-6 flex justify-between items-center">
              <div class="inline-flex items-center text-xs font-medium text-gray-500">
                <% if product.is_a?(Product::AffiliateItem) %>
                  <svg class="mr-1 h-3.5 w-3.5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
                  </svg>
                  Affiliate
                <% else %>
                  <svg class="mr-1 h-3.5 w-3.5 text-purple-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                  </svg>
                  Dropship
                <% end %>
              </div>
              
              <div>
                <% if product.is_a?(Product::AffiliateItem) && product.affiliate_links.any? %>
                  <%= link_to affiliate_redirect_path(product.affiliate_links.first), 
                        class: "rounded-full bg-indigo-600 p-2 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors",
                        data: { turbo: false } do %>
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                  <% end %>
                <% elsif product.is_a?(Product::DropshipItem) %>
                  <button type="button" 
                          class="rounded-full bg-indigo-600 p-2 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                    </svg>
                  </button>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Quick View Overlay (hidden by default) -->
          <div class="absolute inset-0 bg-gray-900/80 flex items-center justify-center opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-10">
            <div class="flex space-x-4">
              <%= link_to product_path(product.slug), class: "rounded-md bg-white/90 backdrop-blur px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm hover:bg-white" do %>
                <span>View Details</span>
              <% end %>
              
              <% if product.is_a?(Product::AffiliateItem) && product.affiliate_links.any? %>
                <%= link_to affiliate_redirect_path(product.affiliate_links.first),
                      class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500",
                      data: { turbo: false } do %>
                  <span>Visit Partner</span>
                <% end %>
              <% elsif product.is_a?(Product::DropshipItem) %>
                <button type="button" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
                  <span>Add to Cart</span>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Empty State (if needed) -->
