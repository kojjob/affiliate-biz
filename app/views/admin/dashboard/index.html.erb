<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Recent Articles -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Recent Articles</h2>
        <%= link_to "View All", admin_articles_path, class: "text-blue-600 hover:text-blue-800" %>
      </div>

      <div class="space-y-4">
        <% if @recent_articles.any? %>
          <% @recent_articles.each do |article| %>
            <div class="border-b pb-3">
              <div class="flex justify-between">
                <h3 class="font-medium"><%= article.title %></h3>
                <span class="text-sm text-gray-500"><%= article.created_at.strftime("%b %d") %></span>
              </div>
              <div class="flex mt-2">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= article.published? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= article.published? ? 'Published' : 'Draft' %>
                </span>
                <div class="ml-auto">
                  <%= link_to "Edit", edit_admin_article_path(article), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No articles yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Recent Products -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Recent Products</h2>
        <%= link_to "View All", admin_products_path, class: "text-blue-600 hover:text-blue-800" %>
      </div>

      <div class="space-y-4">
        <% if @recent_products.any? %>
          <% @recent_products.each do |product| %>
            <div class="border-b pb-3">
              <div class="flex justify-between">
                <h3 class="font-medium"><%= product.name %></h3>
                <span class="text-sm text-gray-500"><%= product.created_at.strftime("%b %d") %></span>
              </div>
              <div class="flex mt-2">
                <span class="text-sm text-gray-700">
                  $<%= product.price %>
                </span>
                <div class="ml-auto">
                  <%= link_to "Edit", edit_admin_product_path(product), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No products yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
