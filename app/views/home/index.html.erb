<% content_for :title, "Home" %>
<div class="bg-gradient-to-b from-indigo-50 to-white">
  <!-- Hero Section -->
  <section class="relative overflow-hidden pb-12 pt-24 sm:pb-16 sm:pt-32">
    <div class="absolute inset-0 bg-[url('/hero-pattern.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="relative z-10 mx-auto max-w-2xl text-center">
        <div class="relative">
          <h1 class="animate-fade-in bg-gradient-to-r from-indigo-600 via-purple-500 to-pink-500 bg-clip-text text-4xl font-bold tracking-tight text-transparent sm:text-6xl">
            Maximize Your Passive Income With Expert Recommendations
          </h1>
          <div class="absolute -top-14 right-0 -z-10 transform-gpu blur-3xl" aria-hidden="true">
            <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-indigo-300 to-purple-400 opacity-25" 
                 style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
            </div>
          </div>
        </div>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          Discover curated products that actually deliver value. Our expert team tests and reviews everything we recommend.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <%= link_to "Explore Top Products", products_path, class: "relative inline-flex items-center justify-center px-6 py-3 text-lg font-medium text-white transition-all duration-200 bg-indigo-600 rounded-full shadow-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 group", data: { turbo_frame: "_top" } %>

          <div class="group relative flex cursor-pointer items-center gap-x-2 text-sm font-semibold leading-6 text-gray-900 hover:text-indigo-600">
            <%= link_to "How it works", "#how-it-works", class: "flex items-center", data: { controller: "scroll", action: "click->scroll#scrollToSection" } %>
            <svg class="h-4 w-4 transition group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Trust Indicators -->
    <div class="absolute bottom-10 left-0 right-0">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none">
          <img class="max-h-12 w-full object-contain grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300" src="<%= asset_path('trusted-logo-1.png') %>" alt="Trusted Partner 1" width="158" height="48" onerror="this.onerror=null; this.src='/api/placeholder/158/48?text=Partner+1'; this.alt='Partner 1';">
          <img class="max-h-12 w-full object-contain grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300" src="<%= asset_path('trusted-logo-2.png') %>" alt="Trusted Partner 2" width="158" height="48" onerror="this.onerror=null; this.src='/api/placeholder/158/48?text=Partner+2'; this.alt='Partner 2';">
          <img class="max-h-12 w-full object-contain grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300" src="<%= asset_path('trusted-logo-3.png') %>" alt="Trusted Partner 3" width="158" height="48" onerror="this.onerror=null; this.src='/api/placeholder/158/48?text=Partner+3'; this.alt='Partner 3';">
          <img class="max-h-12 w-full object-contain grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300" src="<%= asset_path('trusted-logo-4.png') %>" alt="Trusted Partner 4" width="158" height="48" onerror="this.onerror=null; this.src='/api/placeholder/158/48?text=Partner+4'; this.alt='Partner 4';">
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products Section -->
  <section class="py-24 bg-white" data-controller="product-carousel">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <div class="flex items-center justify-between">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Featured Products</h2>
          <div class="flex space-x-3">
            <button data-action="product-carousel#previous" class="rounded-full p-2 text-gray-900 shadow-sm hover:bg-gray-100">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
              </svg>
            </button>
            <button data-action="product-carousel#next" class="rounded-full p-2 text-gray-900 shadow-sm hover:bg-gray-100">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </button>
          </div>
        </div>
        <p class="mt-2 text-lg leading-8 text-gray-600">
          Handpicked selections with the best commission rates and customer satisfaction.
        </p>
      </div>

      <div class="relative mt-10 overflow-hidden">
        <div class="flex space-x-6 overflow-x-auto pb-4 hide-scrollbar" data-product-carousel-target="container">
          <% (@featured_products || []).each do |product| %>
            <div class="group relative flex-none w-80 snap-start overflow-hidden rounded-xl bg-white shadow-md transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
              <div class="aspect-h-1 aspect-w-1 relative overflow-hidden bg-gray-200">
                <img src="<%= product.image.attached? ? url_for(product.image) : asset_path('product-placeholder.jpg') %>" 
                     alt="<%= product.name %>" 
                     class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity duration-300"
                     onerror="this.onerror=null; this.src='/api/placeholder/400/400'; this.alt='<%= product.name %>';">
                
                <!-- Badge -->
                <div class="absolute left-3 top-3 z-10">
                  <% if Time.now - product.created_at < 7.days %>
                    <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800">
                      New
                    </span>
                  <% elsif product.is_a?(Product::AffiliateItem) && product.commission_rate&.to_f >= 0.15 %>
                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                      High Commission
                    </span>
                  <% end %>
                </div>
              </div>
              
              <div class="flex flex-col p-6">
                <div class="flex justify-between">
                  <!-- Category -->
                  <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                    <%= product.categories.first&.name || "General" %>
                  </span>
                  
                  <!-- Rating -->
                  <div class="flex items-center">
                    <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                    </svg>
                    <span class="ml-1 text-sm text-gray-600">4.8</span>
                  </div>
                </div>
                
                <!-- Title -->
                <h3 class="mt-3 text-lg font-semibold text-gray-900">
                  <%= link_to product.name, product_path(product), class: "hover:text-indigo-600 transition-colors duration-200" %>
                </h3>
                
                <!-- Description -->
                <p class="mt-2 text-sm text-gray-600 line-clamp-2 flex-grow">
                  <%= product.description %>
                </p>
                
                <!-- Price & CTA -->
                <div class="mt-4 flex items-center justify-between">
                  <span class="text-lg font-medium text-gray-900">$<%= product.price %></span>
                  
                  <% if product.is_a?(Product::AffiliateItem) && product.affiliate_links.any? %>
                    <%= link_to affiliate_redirect_path(product.affiliate_links.first), 
                          class: "rounded-full bg-indigo-600 p-2 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600",
                          data: { turbo: false } do %>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if (@featured_products || []).empty? %>
            <% 4.times do |i| %>
              <div class="group relative flex-none w-80 snap-start overflow-hidden rounded-xl bg-white shadow-md transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
                <div class="aspect-h-1 aspect-w-1 relative overflow-hidden bg-gray-200">
                  <img src="/api/placeholder/400/400?text=Product+<%= i+1 %>" 
                       alt="Example Product <%= i+1 %>" 
                       class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity duration-300">
                  
                  <!-- Badge -->
                  <div class="absolute left-3 top-3 z-10">
                    <% if i == 0 %>
                      <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800">
                        New
                      </span>
                    <% elsif i == 1 %>
                      <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                        High Commission
                      </span>
                    <% end %>
                  </div>
                </div>
                
                <div class="flex flex-col p-6">
                  <div class="flex justify-between">
                    <!-- Category -->
                    <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                      <%= ["Electronics", "Home", "Fashion", "Beauty"][i % 4] %>
                    </span>
                    
                    <!-- Rating -->
                    <div class="flex items-center">
                      <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                      </svg>
                      <span class="ml-1 text-sm text-gray-600">4.<%= 6 + i %></span>
                    </div>
                  </div>
                  
                  <!-- Title -->
                  <h3 class="mt-3 text-lg font-semibold text-gray-900">
                    <a href="#" class="hover:text-indigo-600 transition-colors duration-200">Example Product <%= i+1 %></a>
                  </h3>
                  
                  <!-- Description -->
                  <p class="mt-2 text-sm text-gray-600 line-clamp-2 flex-grow">
                    This is an example product description. It showcases a high-quality item that's popular in its category.
                  </p>
                  
                  <!-- Price & CTA -->
                  <div class="mt-4 flex items-center justify-between">
                    <span class="text-lg font-medium text-gray-900">$<%= 49 + (i * 20) %>.99</span>
                    
                    <a href="#" class="rounded-full bg-indigo-600 p-2 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <!-- Gradient fades on sides -->
        <div class="pointer-events-none absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-white"></div>
        <div class="pointer-events-none absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-white"></div>
      </div>
      
      <div class="mt-10 text-center">
        <%= link_to "View all products", products_path, 
              class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-24 bg-gradient-to-b from-white to-indigo-50">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">How It Works</h2>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          We make it easy to find, compare, and purchase products that align with your needs and budget.
        </p>
      </div>

      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
          <div class="group flex flex-col items-start transition-all duration-300 hover:-translate-y-2">
            <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-indigo-600 group-hover:bg-indigo-500">
              <svg class="h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75l-2.489-2.489m0 0a3.375 3.375 0 10-4.773-4.773 3.375 3.375 0 004.774 4.774zM21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <dt class="mt-4 text-xl font-semibold leading-7 text-gray-900">1. Discover Quality Products</dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">
              Our expert team researches and tests thousands of products to find those with the best quality, value, and commission rates.
            </dd>
          </div>

          <div class="group flex flex-col items-start transition-all duration-300 hover:-translate-y-2">
            <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-indigo-600 group-hover:bg-indigo-500">
              <svg class="h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
              </svg>
            </div>
            <dt class="mt-4 text-xl font-semibold leading-7 text-gray-900">2. Compare Options</dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">
              Browse detailed comparisons and reviews that highlight the pros and cons of each product to make informed decisions.
            </dd>
          </div>

          <div class="group flex flex-col items-start transition-all duration-300 hover:-translate-y-2">
            <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-indigo-600 group-hover:bg-indigo-500">
              <svg class="h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <dt class="mt-4 text-xl font-semibold leading-7 text-gray-900">3. Earn While You Shop</dt>
            <dd class="mt-2 text-base leading-7 text-gray-600">
              Unlock passive income by sharing your favorite products or purchase directly through our optimized dropshipping channel.
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </section>

  <!-- Latest Articles Section -->
  <section class="py-24 bg-white">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Latest Articles</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">
          Expert insights, buying guides, and product comparisons
        </p>
      </div>
      
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        <% (@articles || []).each do |article| %>
          <article class="group relative isolate flex flex-col justify-between overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
            <!-- Background Image -->
            <img src="<%= article.featured_image.attached? ? url_for(article.featured_image) : asset_path('article-placeholder.jpg') %>" 
                 alt="<%= article.title %>" 
                 class="absolute inset-0 -z-10 h-full w-full object-cover transition-all duration-500 group-hover:scale-105"
                 onerror="this.onerror=null; this.src='/api/placeholder/800/600'; this.alt='<%= article.title %>';">
            
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
            <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>

            <!-- Category -->
            <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
              <span class="mr-8 inline-flex items-center rounded-md bg-indigo-400/10 px-3 py-1 text-xs font-medium text-indigo-400 ring-1 ring-inset ring-indigo-400/30">
                <%= article.categories.first&.name || "General" %>
              </span>
              <time datetime="<%= article.created_at.strftime('%Y-%m-%d') %>" class="mr-8">
                <%= article.created_at.strftime('%B %d, %Y') %>
              </time>
              <div class="-ml-4 flex items-center gap-x-4">
                <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
                  <circle cx="1" cy="1" r="1" />
                </svg>
                <div class="flex gap-x-2.5">
                  <img src="<%= asset_path('author-avatar.png') %>" alt="" class="h-6 w-6 flex-none rounded-full bg-white/10"
                       onerror="this.onerror=null; this.src='/api/placeholder/24/24?text=A'; this.alt='Author';">
                  Editorial Team
                </div>
              </div>
            </div>
            
            <!-- Title -->
            <h3 class="mt-3 text-lg font-semibold leading-6 text-white group-hover:text-indigo-300 transition-colors duration-300">
              <%= link_to article.title, article_path(article), class: "hover:text-indigo-300" %>
            </h3>
          </article>
        <% end %>
        
        <% if (@articles || []).empty? %>
          <% 3.times do |i| %>
            <article class="group relative isolate flex flex-col justify-between overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
              <!-- Background Image -->
              <img src="/api/placeholder/800/600?text=Article+<%= i+1 %>" 
                   alt="Example Article <%= i+1 %>" 
                   class="absolute inset-0 -z-10 h-full w-full object-cover transition-all duration-500 group-hover:scale-105">
              
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>

              <!-- Category -->
              <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
                <span class="mr-8 inline-flex items-center rounded-md bg-indigo-400/10 px-3 py-1 text-xs font-medium text-indigo-400 ring-1 ring-inset ring-indigo-400/30">
                  <%= ["Product Reviews", "Buying Guides", "Industry News"][i] %>
                </span>
                <time datetime="2023-05-01" class="mr-8">
                  May 1, 2023
                </time>
                <div class="-ml-4 flex items-center gap-x-4">
                  <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
                    <circle cx="1" cy="1" r="1" />
                  </svg>
                  <div class="flex gap-x-2.5">
                    <img src="/api/placeholder/24/24?text=A" alt="Author" class="h-6 w-6 flex-none rounded-full bg-white/10">
                    Editorial Team
                  </div>
                </div>
              </div>
              
              <!-- Title -->
              <h3 class="mt-3 text-lg font-semibold leading-6 text-white group-hover:text-indigo-300 transition-colors duration-300">
                <a href="#" class="hover:text-indigo-300">
                  <%= ["Top 10 Products You Need to Try This Year", 
                       "How to Choose the Perfect Tech for Your Home", 
                       "Ultimate Guide to Passive Income Through Affiliate Marketing"][i] %>
                </a>
              </h3>
            </article>
          <% end %>
        <% end %>
      </div>
      
      <div class="mt-10 text-center">
        <%= link_to "View all articles", articles_path, 
              class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-24 bg-indigo-50">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Trusted by Affiliate Partners Worldwide</h2>
        <p class="mt-6 text-lg leading-8 text-gray-600">
