<header class="bg-white shadow-sm">
  <div class="container mx-auto px-4 py-4" data-controller="mobile-menu">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-blue-600">
          Affiliate Biz
        </a>
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex space-x-6">
        <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
        <a href="/products" class="text-gray-700 hover:text-blue-600 font-medium">Products</a>
        <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Reviews</a>
        <a href="/categories" class="text-gray-700 hover:text-blue-600 font-medium">Categories</a>
      </nav>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none" 
                data-action="click->mobile-menu#toggle">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu, hidden by default -->
    <div class="hidden md:hidden mt-2 py-2 space-y-1" data-mobile-menu-target="menu">
      <a href="/" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100">Home</a>
      <a href="/products" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100">Products</a>
      <a href="/articles" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100">Reviews</a>
      <a href="/categories" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100">Categories</a>
    </div>
  </div>
</header>