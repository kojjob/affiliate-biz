<div class="bg-white rounded-lg shadow-md p-4 transition-transform hover:scale-105" 
     data-controller="product-card">
  <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
  <p class="text-gray-600 mt-2 line-clamp-3"><%= product.description %></p>
  
  <div class="mt-4">
    <% if product.is_a?(Product::AffiliateItem) %>
      <%= link_to "View Details", product_path(product.slug), 
                  class: "text-blue-600 font-medium hover:underline" %>
      <span class="text-gray-400 mx-2">|</span>
      <%= link_to "Buy Now", affiliate_redirect_path(product.affiliate_links.first), 
                  class: "text-green-600 font-medium hover:underline",
                  data: { turbo: false } %>
    <% end %>
  </div>
</div>
